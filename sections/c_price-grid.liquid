<style>
    {{ section.settings.text_font | font_face }}
    {{ section.settings.headline_font | font_face }}
  
    #codext-price-{{ section.id }}.codext-price-wrap p,
    #codext-price-{{ section.id }}.codext-price-wrap p a,
    #codext-price-{{ section.id }}.codext-price-wrap li {
      font-size: {{ section.settings.text_size }};
      font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
      font-weight: {{ section.settings.text_font.weight }};
      line-height: 1.15;
      color: {{section.settings.text_color}};
    }
  
    #codext-price-{{ section.id }}.codext-price-wrap h2,  #codext-price-{{ section.id }}.codext-price-wrap h3 {
      font-size: {{ section.settings.headline_size }};
      font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
      font-weight: {{ section.settings.headline_font.weight }};
      line-height: 1.15;
      font-weight: bold;
      color: {{section.settings.headline_color}};
    }
  
    #codext-price-{{ section.id }}.codext-price-wrap h3 {
      font-size: {{ section.settings.price_size }};
      color: {{section.settings.price_color}};
    }
    
    #codext-price-{{ section.id }}.codext-price-wrap {
      background-image: {{ section.settings.background_color }};
      width: 100%;
    }
    
    #codext-price-{{ section.id }} .codext-price {
      position: relative;
      margin: 0 auto;
      max-width: {{ section.settings.max_width }}px;
      padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    }
  
    .codext-price .codext-price-grid {
      display: grid;
      gap: {{ section.settings.grid_gap }}px;
      position: relative;
      width: 100%;
      z-index: 2;
    }
  
    @media only screen and (min-width: 801px) {
      .codext-price .codext-price-grid {
        display: grid;
        grid-auto-columns: 1fr;
        grid-auto-flow: column;
      }
    }
  
    @media only screen and (max-width: 800px) {
      .codext-price .codext-price-grid {
        display: grid;
        grid-template-columns: 1fr;
      }
    }
  
    .codext-price-col {
      box-sizing: border-box;
      position: relative;
      margin: 0;
      padding: 0 0 75px 0;
      overflow: hidden;
      border-radius: 5px;
      box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
      transition: .25s all ease;
      margin: 10px 0;
    }
  
    .codext-price-col-highlighted {
      box-shadow: 0 0 10px 0 rgba(0,0,0,0.5);
      margin: 0;
    }
  
    @media only screen and (max-width: 800px) {
      .codext-price-col-highlighted {
        margin: 0;
      }
    }
  
    #codext-price-{{ section.id }} .codext-price-col h2 {
      margin: 0;
      text-align: center;
      padding: 20px 20px 10px 20px;
      text-transform: uppercase;
    }

    #codext-price-{{ section.id }} .codext-price-col img {
      display: block;
      margin: 0 auto 20px auto;
      max-width: 100%;
      height: auto;
    }
    
    #codext-price-{{ section.id }} .codext-price-col p {
      margin: 0;
      text-align: center;
      padding: 0 20px 25px 20px;
    }
  
    #codext-price-{{ section.id }} .codext-price-col ul {
      margin: 0 20px 0 30px;
      text-align: left;
      padding: 0 20px 15px 0;
      list-style: none;
    }
  
    #codext-price-{{ section.id }} .codext-price-col h3 {
      margin: 0;
      text-align: center;
      padding: 0 20px 20px 20px;
    }
  
    #codext-price-{{ section.id }} .codext-price-col li {
      margin: 0;
      padding: 0 0 10px 0;
      text-align: center;
    }

    #codext-price-{{ section.id }} .codext-price-col li svg {
      transform: translateY(7px);
      margin-right: 5px;
      fill: #888;
    }

    #codext-price-{{ section.id }} .codext-price-col-highlighted li svg {
        fill: {{ section.settings.highlight_color }};
    }
  
    #codext-price-{{ section.id }} .codext-price-col li:last-child {
      margin: 0;
      padding: 0;
    }
  
    #codext-price-{{ section.id }} a.codext-price-cta {
      position: absolute;
      bottom: 20px;
      width: calc(100% - 40px);
      display: block;
      padding: 10px 10px;
      margin: 0 20px;
      background-image: {{section.settings.button_background_color}};
      border-radius: 5px;
      color: {{section.settings.button_text_color}};
      text-decoration: none;
      cursor: pointer;
      font-weight: bold;
      text-shadow: none;
      transition: .25s all;
      text-align: center;
      box-sizing: border-box;
    }
  
    #codext-price-{{ section.id }} .codext-price-col-highlighted a.codext-price-cta {
      background-image: {{section.settings.highlighted_button_background_color}};
      color: {{section.settings.highlighted_button_text_color}};
    }
</style>
  
